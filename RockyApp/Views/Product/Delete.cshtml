@model RockyApp.Models.Product

<form method="post" asp-action="Delete">

    <input asp-for="Id" hidden />
    <div class="border p-3">
        <h2 class="text-info">Delete Product</h2>
        <br />
        <div class="row">
            <div class="col-8">

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Name"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Name" class="form-control" disabled />
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Price"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Price" class="form-control" disabled />
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="ShortDesc"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="ShortDesc" class="form-control" disabled />
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Description"></label>
                    </div>
                    <div class="col-8">
                        <textarea asp-for="Description" class="form-control summernote"></textarea>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label>Category Name</label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Category.Name" class="form-control" disabled />
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label>Application Type Name</label>
                    </div>
                    <div class="col-8">
                        <input asp-for="ApplicationType.Name" class="form-control" disabled />
                    </div>
                </div>


                <div class="form-group row">
                    <div class="col-8 offset-4 row">
                        <div class="col">
                            <button type="submit" class="btn btn-danger w-100">Delete</button>
                        </div>
                        <div class="col">
                            <a asp-controller="Product" asp-action="Index" class="btn btn-success w-100">
                                <i class="fa-solid fa-right-from-bracket"></i> &nbsp; Back
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-3 offset-1 pt-4">
                    <img src="@WC.ImagePath@Model.Image" class="w-100" style="border-radius:5px; border:1px solid #bbb" />
            </div>
        </div>
    </div>
</form>

@section Scripts{

    @*@{
            <partial name="_ValidationScriptsPartial" />
        }*@
    <script>
        $(document).ready(function () {
            $('.summernote').summernote({
                height: 250,
                disable: true
            });
        });
    </script>

}
