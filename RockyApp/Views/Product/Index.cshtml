@model IEnumerable<RockyApp.Models.Product>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Product List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-action="Upsert" class="btn btn-primary">
                <i class="fa-solid fa-plus"></i> &nbsp; Create New Product
            </a>
        </div>
    </div>
    <br /><br />
    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <tr>
                <th>Product Name</th>
                <th>Price</th>
                <th>Category</th>
                <th>Application Type</th>

                <th></th>
            </tr>

            @foreach (var p in Model)
            {
        <tr>
            <td width="25%">@p.Name</td>
            <td width="10%">@p.Price</td>
            <td width="25%">@p.Category.Name</td>
            <td width="25%">@p.ApplicationType.Name</td>

            <td>
                <div class="w-100 btn-group" role="group">
                    <a asp-route-Id="@p.Id" asp-action="Upsert" class="w-50 btn btn-primary">
                        <i class="fa-solid fa-pen-to-square"></i> &nbsp; @*Edit*@
                    </a>
                    <a asp-route-Id="@p.Id" asp-action="Delete" class="w-50 btn btn-danger">
                        <i class="fa-solid fa-trash-can"></i> &nbsp; @*Delete*@
                    </a>
                </div>
            </td>
        </tr>
            }



        </table>
    }
    else
    {
        <p>No Products Exists.</p>
    }

</div>
